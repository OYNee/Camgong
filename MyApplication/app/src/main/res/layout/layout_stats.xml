<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="wrap_content">


    <TextView
        android:id="@+id/timeText"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:background="@color/btnBackColor"
        android:gravity="center"
        android:text="@string/text_default"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintEnd_toStartOf="@+id/calendarText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calendarText"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:background="@color/btnBackColor"
        android:clickable="false"
        android:gravity="center"
        android:text="@string/text_default"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/timeText"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/calendarText"
        app:layout_constraintStart_toStartOf="@+id/timeText"
        app:layout_constraintTop_toBottomOf="@+id/timeText">

        <TextView
            android:id="@+id/realTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/real_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동안 집중했어요"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="최대" />

        <TextView
            android:id="@+id/maxFocusTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max_focus_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동안 집중 했어요"/>

        <TextView
            android:id="@+id/recommendTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/recommend_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목표시간은"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/recommendTime" />
        <TextView
            android:id="@+id/goalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="goal Time" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입니다"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/timeText"
        app:layout_constraintEnd_toEndOf="@+id/calendarText"
        app:layout_constraintTop_toBottomOf="@id/calendarText"
        tools:layout_editor_absoluteX="294dp">

        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cancelBtnBackColor"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            app:layout_constraintTop_toBottomOf="@+id/calendarText"
            tools:ignore="MissingConstraints">

        </TableLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>